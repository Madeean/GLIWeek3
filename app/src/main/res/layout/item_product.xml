<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_produkList"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sv_height1"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimens4"
    app:cardCornerRadius="@dimen/rad_1"
    app:cardElevation="@dimen/ev4">

    <RelativeLayout
        android:id="@+id/rl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_diskon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/card_diskon_product"
            android:padding="@dimen/dimens4"
            android:translationZ="@dimen/tz"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:ignore="RelativeOverlap"
            tools:text="13%" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/iv_1"
            android:layout_height="@dimen/iv_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimens2"
            android:contentDescription="@string/indomie_goreng"
            android:src="@drawable/indomie_goreng_png_0" />

        <TextView
            android:id="@+id/tv_nama_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image"
            android:layout_marginHorizontal="@dimen/dimens2"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Indomie Goreng\nenak enak enak"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_harga_diskon_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_harga_product"
            android:layout_marginHorizontal="15dp"
            tools:text="Rp 5000"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tv_harga_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/stok_from"
            android:layout_marginHorizontal="@dimen/dimens2"
            android:layout_marginVertical="@dimen/dimens4"
            tools:text="Rp. 50.000"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/stok_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/dimens2"
            android:drawablePadding="@dimen/dimens4"
            android:paddingBottom="@dimen/dimens3"
            tools:text="Stok dari Toko"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/stok_toko" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>