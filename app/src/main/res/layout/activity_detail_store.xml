<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailStoreActivity"
    android:background="@color/gray"
    android:padding="15dp">

    <View
        android:id="@+id/v_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/detail_box"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="3dp"
        />

    <ImageView
        android:id="@+id/iv_logo_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/uniliver_logo"
        app:layout_constraintTop_toTopOf="@id/v_container"
        app:layout_constraintBottom_toBottomOf="@id/v_container"
        app:layout_constraintStart_toStartOf="@id/v_container"
        android:layout_marginLeft="30dp"
        android:elevation="4dp"
        />

    <TextView
        android:id="@+id/tv_store_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNILIVER"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/iv_logo_detail"
        app:layout_constraintTop_toTopOf="@id/v_container"
        app:layout_constraintBottom_toBottomOf="@id/v_container"
        android:layout_marginLeft="50dp"
        android:elevation="4dp"/>


    <TextView
        android:id="@+id/tv_semua_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semua Produk"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_container" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_store_product_list"
        tools:listitem="@layout/item_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_semua_produk"
        android:layout_marginTop="15dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>