<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/rl_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/card_product"
            android:padding="5dp"
            android:text="13%"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:contentDescription="Indomie Goreng"
            android:src="@drawable/indomie_goreng_png_0" />

        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_nama_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image"
            android:layout_marginHorizontal="15dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Indomie Goreng enak enak enak"
            android:textColor="@color/black" />

        <TextView
            android:layout_marginVertical="5dp"
            android:id="@+id/tv_harga_diskon_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/tv_nama_product"
            android:text="@string/harga_diskon"
            android:textColor="@color/gray" />

        <TextView
            android:textStyle="bold"
            android:layout_below="@id/tv_harga_diskon_product"
            android:id="@+id/tv_harga_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Rp. 50.000"
            android:textColor="@color/red"
            android:textSize="20sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>