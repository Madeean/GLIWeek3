<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_official_store"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimens4"
    app:cardCornerRadius="@dimen/rad_1"
    app:cardElevation="@dimen/ev2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_store_logo"
            android:layout_width="@dimen/iv_4"
            android:layout_height="@dimen/iv_4"
            android:layout_marginTop="@dimen/dimens3"
            android:contentDescription="@string/indomie_goreng"
            android:src="@drawable/uniliver_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:background="@color/gray"
            android:layout_marginVertical="@dimen/dimens3"/>

        <TextView
            android:id="@+id/tv_nama_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimens2"
            android:layout_marginBottom="@dimen/dimens3"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Uniliver"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>